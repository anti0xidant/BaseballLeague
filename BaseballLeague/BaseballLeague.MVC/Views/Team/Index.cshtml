@model BaseballLeague.MVC.Models.TeamsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Teams</h2>

<h3>View Collection<input type="text" class="input-sm col-lg-offset-8" placeholder="Team Name" name="search-nodata" id="search-nodata" data-list=".searchable" autocomplete="on"></h3>



<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>Team Name</th>
        <th>Manager</th>
        <th>League</th>
        <th>Roster</th>
    </tr>
    </thead>
    @if (Model.Teams.Any())
    {
        <tbody class="searchable">
        @foreach (var m in Model.Teams)
        {
            <tr>
                <td>@(Model.Teams.IndexOf(m) + 1)</td>
                <td>@m.TeamName</td>
                <td>@m.ManagerName</td>
                <td>@m.LeagueName</td>
                <td><a href="/Team/ViewRoster?TeamID=@m.TeamID">View Roster</a></td>
            </tr>
        }
        </tbody>
    }
</table>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/app/SearchBar.js"></script>
}