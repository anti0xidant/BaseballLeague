@{
    ViewBag.Title = "Index";
}


<h3>Teams</h3>

<button class="btn btn-success" id="btnShowAddTeam">Add Team</button>

<div>
    <select class="form-control col-xs-offset-9 col-xs-4" id="selectLeague">
        <option value="All">All</option>
    </select>
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>Team Name</th>
        <th>Manager</th>
        <th>League</th>
        <th>Roster</th>
    </tr>
    </thead>
    <tbody class="searchable" id="teamsTable">

    </tbody>
</table>

<!-- Add Team Modal -->
@Html.Partial("_AddTeamModal")

@section Scripts{
    <script type="text/javascript" src="~/Scripts/app/addTeam.js"></script>
    <script type="text/javascript" src="~/Scripts/app/filterByLeague.js"></script>
}