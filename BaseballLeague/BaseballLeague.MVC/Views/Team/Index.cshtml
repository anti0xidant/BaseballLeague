@model BaseballLeague.MVC.Models.TeamsViewModel

@{
    ViewBag.Title = "Index";
}


<h3>Teams</h3>
<br/>
<div>
    <button class="btn btn-primary" id="NewTeam">New Team</button>
</div>
<div>
    <select class="form-control col-lg-offset-9 col-lg-4" id="select">
        <option value="All">All</option>
        @foreach (var l in Model.Leagues)
        {
            <option value=@l.Value>@l.Text</option>
        }
    </select>
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>Team Name</th>
        <th>Manager</th>
        <th>League</th>
        <th>Roster</th>
    </tr>
    </thead>
    <tbody class="searchable">
    @if (Model.Teams.Any())
    {
        foreach (var m in Model.Teams)
         {
             <tr>
                 <td>@(Model.Teams.IndexOf(m) + 1)</td>
                 <td>@m.TeamName</td>
                 <td>@m.ManagerName</td>
                 <td>@m.LeagueName</td>
                 <td><a href="/Team/ViewRoster?TeamID=@m.TeamID">View Roster</a></td>
             </tr>
         }
    }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/app/SearchBar.js"></script>
}