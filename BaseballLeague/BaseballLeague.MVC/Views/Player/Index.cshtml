@model BaseballLeague.MVC.Models.PlayersVM

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Number</th>
        <th>Team</th>
        <th>Previous Batting Average</th>
        <th>Years Played</th>
        <th>Primary Position</th>
        <th>Secondary Position</th>
    </tr>
    </thead>
    <tbody class="searchable">
    <tr>
        @foreach (var p in Model.Players)
        {
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>@p.JerseyNumber</td>
            <td>@p.TeamID</td>
            <td>@p.LastYearBA</td>
            <td>@p.PrimaryPosition</td>
            <td>@p.SecondaryPosition</td>
        }
    </tr>
    </tbody>
</table>

