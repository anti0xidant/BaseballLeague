@model BaseballLeague.MVC.Models.AddPlayerModalVM

<button class="btn btn-primary" id="btnShowAddPlayer">Add Player</button>

<!-- Modal -->
<div class="modal fade" id="addPlayerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Add Player</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <h2>Add Player</h2>
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" id="addPlayerFirstName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" id="addPlayerLastName" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Jersey Number</label>
                            <input type="text" id="addPlayerJerseyNumber" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Team</label>
                            <select class="form-control col-lg-4" title="Select a Team" id="addPlayerTeamID">
                                @foreach (var tdd in Model.Teams)
                                {
                                    <option value=@tdd.Value>@tdd.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Previous Year's Batting Average</label>
                            <input type="number" min="0" max="1" step="any" id="addPlayerLastYearBA" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Years Played</label>
                            <input type="number" min="0" step="1" id="addPlayerYearsPlayed" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Primary Position</label>
                            <select class="form-control col-lg-4" title="Select a Team" id="addPlayerPrimaryPositionID">
                                @foreach (var ppdd in Model.PrimaryPositions)
                                {
                                    <option value=@ppdd.Value>@ppdd.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Secondary Position</label>
                            <select class="form-control col-lg-4" title="Select a Team" id="addPlayerSecondaryPositionID">
                                <option value="null">None</option>
                                @foreach (var spdd in Model.SecondaryPositions)
                                {
                                    <option value=@spdd.Value>@spdd.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="btnSavePlayer">Save</button>
            </div>
        </div>
    </div>
</div>
