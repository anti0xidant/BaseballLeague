@model BaseballLeague.MVC.Models.TradePlayerViewModel

<div class="modal fade" id="tradePlayerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Trade Player</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <input type="hidden" id="tradePlayerID"/>
                            <label>Team Name</label>
                            <select class="form-control col-lg-4" id="tradeTeamID">
                                @foreach (var m in Model.Teams)
                                {
                                    <option value=@m.TeamID>@m.TeamName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="btnMakeTrade">Trade</button>
            </div>
        </div>
    </div>
</div>`